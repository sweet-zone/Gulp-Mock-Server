{
    // major

    "eqeqeq"        : true,     // "===" and "!==" should be used instead of "==" and "!="
    "devel"         : false,    // "alert(...)" should not be used
                                // "eval" and "arguments" should not be bound or assigned
                                // "FIXME" tags should be handled
    "forin"         : true,     // "for...in" loops should filter properties before acting on them
    "esnext"        : false,    // "future reserved words" should not be used as identifiers
                                // "switch" statements should not contain non-case labels
    "withstmt"      : false,    // "with" statements should not be used
    "supernew"      : false,    // Array and Object constructors should not be used
    "evil"          : false,    // Code should not be dynamically injected and executed to prevent Eval Injection vulnerability
                                // Collapsible "if" statements should be merged
                                // Comma operator should not be used
    "nonew"         : false,    // Constructor functions should not be called purely for side-effects
    "debug"         : false,    // Debugger statements should not be used
                                // Files should not have too many lines
                                // Function argument names should be unique
                                // Function call arguments should not start on new line
    "loopfunc"      : false,    // Function declarations should not be made within blocks // Tolerate functions being defined in loops
                                // Function names should comply with a naming convention
                                // Functions should not be redeclared
                                // HTML-style comments should not be used
                                // Internet Explorer's conditional comments should not be used
                                // Jump statements should not be followed by other statements
                                // Loops should not contain more than a single "break" or "continue" statement
    "multistr"      : false,    // Multiline string literals should not be used
                                // Named function expressions should not be used
    "noempty"       : true,     // Nested blocks of code should not be left empty
                                // Octal values should not be used
                                // Only "while", "do" and "for" statements should be labelled
                                // Property names should not be duplicated within an object literal
                                // Switch cases should end with an unconditional "break" statement
                                // The same name should not be used to declare both a function and a variable in the same scope
                                // Trailing commas should not be used
                                // Useless "if(true) {...}" and "if(false){...}" blocks should be removed
                                // Variables should be declared before they are used
    "shadow"        : false,    // Variables should not be redeclared
                                // Wrapper objects should not be used for primitive types
    "undef"         : true,
    "unused"        : true, 
    "strict"        : false,
    "globalstrict"  : false, 

    "browser"       : true,

    "globals"       : {
        "NEJ"           : true,
        "Regular"       : true,
        "YixinJSBridge" : true
    } 
}